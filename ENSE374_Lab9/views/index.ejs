</header>
<div class="mid">
    <div class="accordion" id="accordionExample">
    <div class="accordion-item">
      <h2 class="accordion-header" id="headingOne">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          <h5>Log in</h5>
        </button>
      </h2>
      <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
        <div class="accordion-body">
        <h3 style="padding-bottom:20px;">Log In</h3>
            <form action="/login" method="post">

                <label for="email1">Email Address: </label> <br/>
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Email Address" aria-label="Username" id="email1" name="username" aria-describedby="basic-addon1">
                  </div>

                <label for="pwd1">Password: </label> <br/> 
                <div class="input-group mb-3">
                    <input type="password" class="form-control" placeholder="Password" aria-label="Username" id="pwd1" name="password" aria-describedby="basic-addon1">
                  </div>
                <button type="submit" class="btn btn-primary">Log In</button></br>
            </form>
        </div>
      </div>
    </div>

    <div class="accordion-item">
      <h2 class="accordion-header" id="headingTwo">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
         <h5>Sign up</h5>
        </button>
      </h2>
      <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
        <div class="accordion-body">
        <h3 style="padding-bottom:20px;">Sign up</h3>
            <form action="/register" method="post">

              <label for="email1">Email Address: </label> <br/>
              <div class="input-group mb-3">
                  <input type="text" class="form-control" placeholder="Email Address" aria-label="Username" id="regEmail" name="username" aria-describedby="basic-addon1">
                </div>

              <label for="pwd1">Password: </label> <br/> 
              <div class="input-group mb-3">
                  <input type="password" class="form-control" placeholder="Password" aria-label="Username" id="regPwd" name="password" aria-describedby="basic-addon1">
                </div>

                  <label for="password">Authentication: </label> <br/> 
                  <div class="input-group mb-3">
                      <input type="text" class="form-control" placeholder="Authentication" aria-label="Username" id="auth" name="auth" aria-describedby="basic-addon1">
                    </div>
    
                    <button type="submit" class="btn btn-primary">Sign Up</button></br>
            </form>
        </div>
      </div>
    </div>
</div>
